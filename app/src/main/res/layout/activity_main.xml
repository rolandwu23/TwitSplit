<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        android:id="@+id/base"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="#363640"
>


    <android.support.design.widget.TextInputLayout
            android:id="@+id/hel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:errorEnabled="true"
            app:counterEnabled="true"
            android:layout_marginBottom="20dp"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.5"
            app:layout_constraintBottom_toTopOf="@+id/but"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            style="@style/GreyScaleEditTextLayout"
            app:hintTextAppearance="@style/GreyScaleEditTextFloatingLabel"
    >

        <android.support.design.widget.TextInputEditText
                android:id="@+id/hello"
                android:inputType="textMultiLine"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Hello Text"
                android:gravity="top|start"
                android:overScrollMode="always"
                android:scrollbarStyle="insideInset"
                android:scrollbars="vertical"
                android:lines="3"
                android:scrollHorizontally="false"
                android:textColor="@color/input_text"
        />

    </android.support.design.widget.TextInputLayout>

    <Button
            android:id="@+id/but"
            android:layout_width="wrap_content"
            android:theme="@style/AppTheme.Button"
            android:layout_height="wrap_content"
            android:text="@string/button_text"
            android:textSize="14sp"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
    />


        <TextView
                android:id="@+id/hello2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/background"
                android:textSize="16sp"
                android:layout_marginTop="20dp"
                android:gravity="top|start"
                android:textColor="@color/input_text"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintWidth_percent="0.5"
                app:layout_constraintTop_toBottomOf="@+id/but"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
        />



</android.support.constraint.ConstraintLayout>